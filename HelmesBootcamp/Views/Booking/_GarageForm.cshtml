@model HelmesBootcamp.Models.DbGarages

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("The following errors were found:", new { @class = "alert alert-danger" })

    <fieldset>
        <h1>@ViewBag.Title</h1>
        <div class="row">
            <div class="col-md-6">

                <div class="form-group">
                    @Html.LabelFor(model => model.GarageName, new { @class = "control-label", @for = "garages-garage-name" })
                    @Html.TextBoxFor(model => model.GarageName, new { @class = "form-control", @id = "garages-garage-name" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Address, new { @class = "control-label", @for = "garages-address" })
                    @Html.TextBoxFor(model => model.Address, new { @class = "form-control", @id = "garages-address" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TyreHotel, new { @class = "control-label", @for = "garages-tyre-hotel" })
                    @Html.CheckBoxFor(model => model.TyreHotel, new { @id = "garages-tyre-hotel"})
                </div>
            
                        <p>
                            <input class="btn btn-primary" type="submit" value="Submit" id="garages-submit">
                        </p>
            </div>
           
        </div>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "GarageList")
</div>