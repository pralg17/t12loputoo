@model HelmesBootcamp.Models.DbBooking

@{
    ViewBag.Title = "Cancel booking";
}

<h2>@ViewBag.Title</h2>

<div class="alert alert-danger">
    Are you sure you want to cancel the following booking?
</div>

<div class="row">
    <div class="col-lg-6">

        <div class="row">
            <div class="col-xs-6 col-sm-5">
                @Html.LabelFor(model => model.DbGarages.GarageName)
            </div>
            <div class="col-xs-6 col-sm-7">
                @Model.DbGarages.GarageName
            </div>
        </div>  

        <div class="row">
            <div class="col-xs-6 col-sm-5">
                @Html.LabelFor(model => model.DbVehicles.TypeOfVehicle)
            </div>
            <div class="col-xs-6 col-sm-7">
                @Model.DbVehicles.TypeOfVehicle
            </div>
        </div>

        <div class="row">
            <div class="col-xs-6 col-sm-5">
                @Html.LabelFor(model => model.StartDateTime)
            </div>
            <div class="col-xs-6 col-sm-7">
                @Model.StartDateTime.ToString("dd.MM.yyyy HH:mm")
            </div>
        </div>

        <div class="row">
            <div class="col-xs-6 col-sm-5">
                @Html.LabelFor(model => model.EndTime)
            </div>
            <div class="col-xs-6 col-sm-7">
                @Model.EndTime
            </div>
        </div>

        <div class="row">
            <div class="col-xs-6 col-sm-5">
                @Html.LabelFor(model => model.CustomersPhoneNumber)
            </div>
            <div class="col-xs-6 col-sm-7">
                @Model.CustomersPhoneNumber
            </div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="pad-top">
                <button type="submit" class="btn btn-danger btn-lg margin-right" id="booking-cancel-yes">
                    <span class="glyphicon glyphicon-trash"></span> Yes
                </button>
                <a href="@Url.Action("Index")" class="btn btn-warning btn-lg" id="booking-cancel-no">
                    <span class="glyphicon glyphicon-remove"></span> No
                </a>
            </div>
        }

    </div>

</div>