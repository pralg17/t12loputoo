                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index","Booking")">
                    <img alt="HSBc 2017" src="~/Images/helmes-logo-white.svg" height="20">
                </a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Booking List", "Index", "Booking")</li>
                    <li>@Html.ActionLink("New Booking", "Create", "Booking")</li>
                    <li>@Html.ActionLink("New Garage", "CreateGarage", "Booking")</li>
                    <li>@Html.ActionLink("Garage List", "GarageList", "Booking")</li>
                    <li>@Html.ActionLink("Customer's New Booking", "CustomersBooking", "Booking")</li>
                    <li>@Html.ActionLink("Reports", "Reports", "Booking")</li>

                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
    <div class="container">@RenderBody()</div>
    <script src="~/Scripts/jquery-2.2.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.validate.bootstrap.js"></script>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/knockout-3.4.0.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.min.js"></script>
    <script src="~/Scripts/jquery.datetimepicker.full.min.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".datetimepicker").datetimepicker(
                {            
                    minDate: new Date(),
                    format: 'd.m.Y H:i'
                });
        });

        $.validator.methods["date"] = function (value, element) { return true; }

            function copyTextValue() {
          
                var minutes = 0;

                this.startDate = document.getElementById("booking-start-date-time").value;
                console.log(this.startDate);
                this.vehicleType = document.getElementById("booking-type-of-vehicle").value;
               
                if (startDate != "") {
                    //Car or Van
                    if (vehicleType == 1 || vehicleType == 2) {
                        minutes = 30;
                   
                    }
                    //Truck
                    else if (vehicleType == 3) {
                        minutes = 60;
                        document.getElementById("booking-end-time").value = momentDate;
                    }
                    var momentDate = moment(startDate, "DD/MM/YYYY hh:mm").add(minutes, 'minutes').format("HH:mm");
                }
                else {
                    momentDate = "";
                }
                document.getElementById("booking-end-time").value = momentDate;

                console.log(momentDate);

            }
           
            $('#day-1,#day-2,#day-3,#day-4').click(function (e) {
                e.preventDefault();
                $(this).find('span').toggleClass('glyphicon glyphicon-warning-sign');
            });           
    </script>
</body>
</html>
